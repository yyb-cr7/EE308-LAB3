page {
    height: 100%;
}
.bobingBowl{
    display: flex;
    position: absolute;
    top: 66%;
}
.pressButton{
    display: flex;
    position: absolute;
    top: 30%;
    background-color: rgb(241, 233, 238);
    height:40px;
    width: 20%;   
    line-height: 25px;
    text-align: center;
    font-size: larger;
    border-radius: 30rpx ;
}
.diceAnimation{
    display: flex;
    position: absolute;
    height:400rpx;
    width: 400rpx;   
    top:40%;
}
.diceList{
    display: flex;
    position: absolute;
    flex-direction: row;
    top:50%;   
}
.diceList image{
    height: 100rpx;
    width: 100rpx;
}
.rank{
    display: flex;
    position: absolute;
    top:20%;
    color: yellow;
    font-weight: 800;
    height: 100rpx;
    width:750rpx;
}
.rank text{
    display: flex;
    position: absolute;
    font-size: 50rpx;
    left:32%;
}
.continue{
    display: flex;
    position: absolute;
    top:30%;
    height:90rpx;
    width:150rpx;
    background:rgb(242, 243, 206);
}
.continue text{
    display: flex;
    position: absolute;
    left:40%;
}
.newGame{
    display: flex;
    position: absolute;
    top:30%;
    height:90rpx;
    width:150rpx;
    background:rgb(242, 243, 206);
}
.newGame text{
    display: flex;
    position: absolute;
    left:30%;
}
.return{
    display: flex;
    position: absolute;
    top:40%;
    height:90rpx;
    width:30%;
    background:rgb(242, 243, 206);
}
.return text{
    display: flex;
    position: absolute;
    left:40%;
}
