/* pages/index/main_index.wxss */
page {
    height: 100%;
}
.bobingBowl{
    display: flex;
    position: absolute;
    top: 66%;
}
.pressButton{
    display: flex;
    position: absolute;
    top:35%;
    height:200rpx;
    width: 200rpx;   
    border-radius: 50%;
}
.diceAnimation{
    display: flex;
    position: absolute;
    height:180px;
    width: 230px;   
    top: 71%;
}
.diceList{
    display: flex;
    position: absolute;
    flex-direction: row;
    top:30%;
    
}
.diceList image{
    height: 100rpx;
    width: 100rpx;
}
.rank{
    display: flex;
    position: absolute;
    top:20%;
    
    height: 100rpx;
    width:750rpx;
}
.rank text{
    display: flex;
    position: absolute;
    font-size: 50rpx;
    left:32%;
}
.continue{
    display: flex;
    position: absolute;
    top:40%;
    height:90rpx;
    width:150rpx;
    background:rgb(242, 243, 206);
}
.continue text{
    display: flex;
    position: absolute;
    left:40%;
}
.newGame{
    display: flex;
    position: absolute;
    top:40%;
    height:90rpx;
    width:150rpx;
    background:rgb(242, 243, 206);
}
.newGame text{
    display: flex;
    position: absolute;
    left:30%;
}
.return{
    display: flex;
    position: absolute;
    top:50%;
    height:90rpx;
    width:30%;
    background:rgb(242, 243, 206);
}
.return text{
    display: flex;
    position: absolute;
    left:40%;
}
.input {
    font-size: 36rpx;
    font-weight: bold;
    top: 1%;
    left: 77%;
    position:absolute;
}

.endButton {
    width : 150rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 38rpx;
    font-weight: bold;
    color: white;
    border: 1rpx solid rgb(52, 10, 240);
    border-radius: 45rpx;
    top:83%;
    position: absolute;
}

.enterButton {
    color: white;
    line-height: 80rpx;
    font-size: 38rpx;
    border: 1rpx solid #333;
    border-radius: 10rpx;
    top:20%;
    left: 20%;
    position: absolute;
}

.extra {
    font-size: 36rpx;
    font-weight: bold;
    color: gold;
    top: 1%;
    left: 77%;
    position:absolute;
}

.extra2 {
    font-size: 36rpx;
    font-weight: bold;
    color: gold;
    top: 1%;
    left: 88%;
    position:absolute;
}
.background{
    width :100%;
    height : 92%;
    position: absolute;
    z-index: -1;
 }