/* pages/index/main_index.wxss */
page {
    height: 100%;
}
.indexContainer{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: blueviolet;
}
.avaUrl{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.background{
   width :100%;
   height : 90%;
   position: absolute;
   z-index: -1;
}

.head {
    width : 200rpx;
    height : 220rpx;
    border-radius: 50%;
    margin: 100rpx 0;
}

.username {
    font-size: 32rpx;
    margin: 100rpx 0;
}

.button {
    width : 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    border: 1rpx solid #333;
    border-radius: 10rpx;
}